@model IEnumerable<CategoryViewModel>

@*
    TODO: Chỉnh lại url của thể loại
*@

@{
    int max = Model.Count();
}

<div class="mb-4 row">
    <div class="align-items-center col-12 d-flex justify-content-between mb-2">
        <h2 class="mb-0 text-uppercase">Thể Loại</h2>
        <h6 class="mb-0 text-uppercase">Xem thêm</h6>
    </div>

    @for (int i = 0; i < max; i++)
    {
        CategoryViewModel category = Model.ElementAt(i);

        <div class="col-6 col-sm-4 col-xl-2 @(i >= 4 ? "d-none d-sm-block" : null)">
            <div class="card">
                <a href="">
                    <img alt="@category.Name" class="card-img" src="@category.Thumbnail">
                    <div class="align-items-center card-img-overlay d-flex justify-content-center">
                        <div
                            class="card-title font-weight-bolder mb-2 text-size-md text-size-sm text-size-xs text-truncate text-white">
                            @category.Name
                        </div>
                    </div>
                </a>
            </div>
        </div>
    }
</div>