@page
@model LoginModel

@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "Đăng Nhập";
}

<div class="card bg-secondary border-0 mb-0">
    <div class="card-body px-lg-5 py-lg-5">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="form-group mb-3">
                <div class="input-group input-group-merge input-group-alternative">
                    <label asp-for="Input.UserName" class="input-group-prepend mb-0">
                        <span class="input-group-text">
                            <i class="ni ni-single-02"></i>
                        </span>
                    </label>
                    <input asp-for="Input.UserName" class="form-control" placeholder="Nhập địa chỉ email"/>
                    <span asp-validation-for="Input.UserName"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group input-group-merge input-group-alternative">
                    <label asp-for="Input.Password" class="input-group-prepend mb-0">
                        <span class="input-group-text">
                            <i class="ni ni-lock-circle-open"></i>
                        </span>
                    </label>
                    <input asp-for="Input.Password" class="form-control" placeholder="Nhập mật khẩu của bạn"/>
                    <span asp-validation-for="Input.Password"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="custom-control custom-control-alternative custom-checkbox">
                    <input asp-for="Input.RememberMe" class="custom-control-input" />
                    <label asp-for="Input.RememberMe" class="custom-control-label">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Đăng Nhập</button>
            </div>
        </form>
    </div>
</div>
<div class="row mt-3">
    <div class="col">
        <a asp-controller="Home" asp-action="Index" class="text-light">
            <small>Quay về trang chủ</small>
        </a>
    </div>
    <div class="col text-right">
        <a asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-light">
            <small>Tạo tài khoản</small>
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}