@using CPMusic.Areas.Admin.Controllers

@functions
{
    string? IsMenuSelected(string actionName, string controllerName, string className = "active")
    {
        var conname = ViewContext.RouteData.Values["controller"]?.ToString()?.ToLower();
        var actname = ViewContext.RouteData.Values["action"]?.ToString()?.ToLower();
        controllerName = controllerName.Replace("Controller", "");

        if (conname == controllerName.ToLower() && actname == actionName.ToLower())
        {
            return className;
        }

        return null;
    }
}

<nav class="bg-white fixed-left navbar navbar-expand-xs navbar-light navbar-vertical sidenav" id="sidenav-main">
    <div class="scrollbar-inner scroll-wrapper" style="position: relative;">
        <div class="scrollbar-inner scroll-content scroll-scrolly_visible" style="height: auto; margin-bottom: 0; margin-right: 0; max-height: 492px;">
            <!-- Brand -->
            <div class="align-items-center d-flex sidenav-header">
                <h1 class="m-0 navbar-brand text-primary" style="font-size: 28px;">CPMusic</h1>
                <div class="ml-auto">
                    <!-- Sidenav toggler -->
                    <div class="active d-none d-xl-block sidenav-toggler" data-action="sidenav-unpin" data-target="#sidenav-main">
                        <div class="sidenav-toggler-inner">
                            <i class="sidenav-toggler-line"></i>
                            <i class="sidenav-toggler-line"></i>
                            <i class="sidenav-toggler-line"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="navbar-inner">
                <!-- Collapse -->
                <div class="collapse navbar-collapse" id="sidenav-collapse-main">
                    <!-- Nav items -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-action="Index" asp-area="Admin" asp-controller="Home" class="nav-link @IsMenuSelected(nameof(HomeController.Index), nameof(HomeController))">
                                <i class="ni ni-shop text-primary"></i>
                                <span class="nav-link-text">Trang chủ</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a aria-controls="navbar-examples" data-toggle="collapse" href="#navbar-examples" role="button"
                               aria-expanded="@(
                                    IsMenuSelected(nameof(SongController.Index), nameof(SongController)) != null ||
                                    IsMenuSelected(nameof(SongController.Create), nameof(SongController)) != null ? "true" : "false"
                               )"
                               class="nav-link @IsMenuSelected(nameof(SongController.Index), nameof(SongController))
                                    @IsMenuSelected(nameof(SongController.Create), nameof(SongController))">
                                <i class="ni ni-ungroup text-orange"></i>
                                <span class="nav-link-text">Quản lý bài hát</span>
                            </a>
                            <div class="collapse
                                @(IsMenuSelected(nameof(SongController.Index), nameof(SongController)) is null ? null : "show")
                                @(IsMenuSelected(nameof(SongController.Create), nameof(SongController)) is null ? null : "show")
                            " id="navbar-examples">
                                <ul class="flex-column nav nav-sm">
                                    <li class="nav-item">
                                        <a asp-action="Index" asp-area="Admin" asp-controller="Song" class="nav-link">
                                            <span class="sidenav-mini-icon">D</span>
                                            <span class="sidenav-normal">Danh sách bài hát</span>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="Create" asp-area="Admin" asp-controller="Song" class="nav-link">
                                            <span class="sidenav-mini-icon">T</span>
                                            <span class="sidenav-normal">Tạo bài hát</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                    <!-- Divider -->
                    <hr class="my-3">
                    <!-- Heading -->
                    <h6 class="navbar-heading p-0 text-muted">
                        <span class="docs-normal">Thông tin</span>
                        <span class="docs-mini">T</span>
                    </h6>
                    <!-- Navigation -->
                    <ul class="mb-md-3 navbar-nav">
                        <li class="nav-item nav-link">
                            <i class="ni ni-ui-04"></i>
                            <span class="nav-link-text">
                                Giao diện:
                                <a href="https://www.creative-tim.com/product/argon-dashboard-pro">Argon Premium</a>
                            </span>
                        </li>
                        <li class="nav-item nav-link">
                            <i class="ni ni-chart-pie-35"></i>
                            <span class="nav-link-text">
                                Tác giả:
                                <a href="https://fb.com/chuphong1999">Chu Phong</a>
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</nav>